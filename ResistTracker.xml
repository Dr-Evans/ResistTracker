<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\..\FrameXML\UI.xsd">

    <Frame name="ResistTrackerFrame"
           parent="UIParent"
           enableMouse="true"
           movable="true">

        <Size>
            <AbsDimension x="150" y="100"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT">
                <Offset x="20" y="-90"/>
            </Anchor>
        </Anchors>

        <Frames>
            <Frame name="$parent_Header">
                <Size>
                    <AbsDimension y="14"/>
                </Size>

                <Anchors>
                    <Anchor point="TOPLEFT"/>
                    <Anchor point="TOPRIGHT"/>
                </Anchors>

                <Layers>
                    <Layer>
                        <FontString name="$parent_ClassNameText" inherits="Tooltip_Med">
                            <Anchors>
                                <Anchor point="TOP"
                                        relativePoint="TOP"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame name="$parent_Body">
                <Size>
                    <AbsDimension y="40"/>
                </Size>

                <Anchors>
                    <Anchor point="TOPLEFT"
                            relativeTo="$parent_Header"
                            relativePoint="BOTTOMLEFT"/>
                    <Anchor point="TOPRIGHT"
                            relativeTo="$parent_Header"
                            relativePoint="BOTTOMRIGHT"/>
                </Anchors>
                <Layers>
                    <Layer>
                        <FontString name="$parent_SessionTotalFontString"
                                    inherits="Tooltip_Med">
                            <Anchors>
                                <Anchor point="TOPLEFT"
                                        relativeTo="$parent"
                                        relativePoint="TOPLEFT"/>
                            </Anchors>
                        </FontString>

                        <FontString name="$parent_SessionResistCountFontString"
                                    inherits="Tooltip_Med">
                            <Anchors>
                                <Anchor point="TOPLEFT"
                                        relativeTo="$parent_SessionTotalFontString"
                                        relativePoint="BOTTOMLEFT"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
            </Frame>

            <Frame name="$parent_ClassResists">
                <Size>
                    <AbsDimension y="40"/>
                </Size>

                <Anchors>
                    <Anchor point="TOPLEFT"
                            relativeTo="$parent_Body"
                            relativePoint="BOTTOMLEFT"/>
                    <Anchor point="TOPRIGHT"
                            relativeTo="$parent_Body"
                            relativePoint="BOTTOMRIGHT"/>
                </Anchors>
            </Frame>
        </Frames>
    </Frame>
</Ui>